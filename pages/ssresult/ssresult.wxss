/* pages/ssresult/ssresult.wxss */
page{
  background-color: #eee;
}
.sstop{
  display: flex;
  padding: 15rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
  background-color: white;
}
.sstop image{
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
}
.sstop text{
  color: #707070;
  font-size: 33rpx;
  line-height: 70rpx;
}
.tabbar{
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #ddd;
  background-color: white;
}
.tabbar text{
  font-size: 35rpx;
  padding: 20rpx;
}
.xuanze{
  border-bottom: 6rpx solid red;
  color:red;  
}



.rexiao_box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 25rpx;
  position: relative;
}
.rexiao_block{
  width: 48%;
  background-color: white;
  margin-bottom: 25rpx;
  border-radius: 25rpx;
}
.rexiao_tit{
  display: block;
  font-size: 33rpx;
  height: 86rpx;
  overflow: hidden;
}
.icon_money{
  font-size: 23rpx;
}
.rexiao_price{
  font-size: 33rpx;
  margin-right: 5rpx;
}
.rexiao_chuxiao{
  font-size: 25rpx;
  color: red;
  display: block;
  width: 76rpx;
  height: 32rpx;
  background-color: pink;
}
.rexiao_originalPrice{
  font-size: 25rpx;
  text-decoration:line-through;
}
.rexiao_image{
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}
.rexiao_price_box,.rexiao_p_box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.rexiao_cont{
  padding: 0 10rpx 10rpx 10rpx;
}
/* 价格区间 */
.jiage_box{
  position: absolute;
  left: 0;
  top: 0;
  height: 190rpx;
  width: 100%;
  background-color: white;
  z-index: 10;
}
.jiage_box_top{
  display: flex;
  justify-content: space-around;
}
.jiage_box_top text{
  display: inline-block;
  width: 27%;
  padding: 10rpx;
  text-align: center;
  background-color: #eee;
  margin-top: 20rpx;
  font-size: 33rpx;
  border-radius: 5rpx;
}
.jiage_box_bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15rpx;
  margin-top: 20rpx;
}
.jiage_box_bottom_left{
  display: flex;
  flex-direction: row;
}
.jiage_box_bottom_left text{
  font-size: 30rpx;
}
.jiage_box_bottom input{
  width: 180rpx;
  border: 1rpx solid #aaa;
  font-size: 31rpx;
  padding-left: 10rpx;
  margin-left: 10rpx;
  border-radius: 8rpx;
}
.queren{
  display: block;
  padding: 10rpx;
  font-size: 30rpx;
  width: 15%;
  background-color: red;
  text-align: center;
  color: white;
  border-radius: 5rpx;
}